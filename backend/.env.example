# Application Settings
APP_NAME="Ruth - Civic Letter Platform"
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,ruthapp.us,www.ruthapp.us
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,https://ruthapp.us,https://www.ruthapp.us

# Database
DATABASE_URL=postgresql://ruth_user:ruth_password@localhost:5432/ruth_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# Redis Cache
REDIS_URL=redis://localhost:6379/0
REDIS_PREFIX=ruth:

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# External APIs
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4-turbo-preview

GEOCODIO_API_KEY=your-geocodio-api-key
GEOCODIO_VERSION=1.7

# Amazon SES Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
SES_FROM_EMAIL=noreply@ruthapp.us
SES_FROM_NAME="Ruth Platform"
SES_CONFIGURATION_SET=ruth-emails  # Optional: for tracking
SES_VERIFIED_DOMAIN=ruthapp.us

SIGNALWIRE_PROJECT_ID=your-signalwire-project-id
SIGNALWIRE_TOKEN=your-signalwire-token
SIGNALWIRE_SPACE_URL=your-space.signalwire.com
SIGNALWIRE_FAX_FROM=+1234567890

# File Storage
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=pdf,png,jpg,jpeg

# S3 Configuration (for file storage and backups)
S3_BUCKET_NAME=ruth-platform-files
S3_BUCKET_REGION=us-east-1
S3_PUBLIC_URL=https://ruth-platform-files.s3.amazonaws.com

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_PER_MINUTE=60

# Email Settings (for notifications via SES)
SMTP_HOST=email-smtp.us-east-1.amazonaws.com
SMTP_PORT=587
SMTP_USERNAME=your-ses-smtp-username
SMTP_PASSWORD=your-ses-smtp-password
SMTP_FROM_EMAIL=noreply@ruthapp.us

# Sentry (optional - for production)
SENTRY_DSN=

# Feature Flags
ENABLE_REGISTRATION=True
ENABLE_FAX_DELIVERY=True
ENABLE_EMAIL_DELIVERY=True
REQUIRE_EMAIL_VERIFICATION=True

# Cache TTL (in seconds)
GEOCODING_CACHE_TTL=2592000  # 30 days
REPRESENTATIVE_CACHE_TTL=604800  # 7 days
SESSION_CACHE_TTL=3600  # 1 hour